{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>StoryLink</th>
                <td>{{ item.storyLink }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
